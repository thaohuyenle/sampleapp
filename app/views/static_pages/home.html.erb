<% provide :title, t("static_pages.home.title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "static_pages.home.micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.sample_app" %></h1>
    <p>
      <%= raw t("static_pages.home.home_content",
        ruby_tut_link: link_to(t("static_pages.home.ror_tut"),
        "http://www.railstutorial.org/")) %></p>
    <%= link_to t("static_pages.home.signup"), new_user_path,
      class: "btn btn-lg btn-primary"%>
  </div>
  <%= link_to image_tag("rails.png", alt: t("static_pages.home.logo")),
    "http://rubyonrails.org/" %>
<% end %>
