<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= link_to micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.microposts.posted" %>
    <%= time_ago_in_words micropost.created_at %>
    <%= t "microposts.microposts.ago" %>
    <% if micropost.user.current_user? micropost.user %>
      <%= link_to t("microposts.microposts.delete"), micropost,
        method: :delete,
        data: {confirm: t("microposts.microposts.you_sure")} %>
    <% end %>
  </span>
</li>
